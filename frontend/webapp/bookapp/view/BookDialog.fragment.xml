<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="bookDialog"
        title="{dialogModel>/title}"
        contentWidth="400px"
        resizable="false"
        draggable="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Title *" required="true"/>
                <Input
                    id="titleInput"
                    value="{dialogModel>/book/title}"
                    placeholder="Enter book title"
                    required="true"
                    valueState="{dialogModel>/titleState}"
                    valueStateText="{dialogModel>/titleStateText}"/>

                <Label text="Author *" required="true" class="sapUiMediumMarginTop"/>
                <Input
                    id="authorInput"
                    value="{dialogModel>/book/author}"
                    placeholder="Enter author name"
                    required="true"
                    valueState="{dialogModel>/authorState}"
                    valueStateText="{dialogModel>/authorStateText}"/>

                <Label text="Created By" class="sapUiMediumMarginTop"/>
                <Input
                    id="createdByInput"
                    value="{dialogModel>/book/created_by}"
                    placeholder="Enter creator name"
                    enabled="{= ${dialogModel>/mode} === 'create' }"/>

                <MessageStrip
                    text="{dialogModel>/message}"
                    type="{dialogModel>/messageType}"
                    visible="{= ${dialogModel>/message} !== '' }"
                    class="sapUiMediumMarginTop"/>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{dialogModel>/confirmButtonText}"
                type="Emphasized"
                press="onDialogConfirm"
                enabled="{dialogModel>/confirmEnabled}"/>
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onDialogCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
